<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:gravity="bottom"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/pik_title"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"/>

    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/ChoosenImageView">
    </ImageView>

        <LinearLayout
            android:id="@+id/toolbarmenucontainer"
            android:layout_width="match_parent"
            android:weightSum="5"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:background="@color/cyan">

            <ImageButton
                android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/cyan"
                android:clickable="true"
                android:layout_weight = "1"
                android:src="@drawable/undo_selector" />

            <ImageButton
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/cyan"
                android:clickable="true"
                android:layout_weight = "1"
                android:src="@drawable/clear_selector" />

            <ImageButton
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/cyan"
                android:clickable="true"
                android:layout_weight = "1"
                android:src="@drawable/save_selector" />

            <ImageButton
                android:id="@+id/button4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/cyan"
                android:clickable="true"
                android:layout_weight = "1"
                android:src="@drawable/highlight_selector" />

            <ImageButton
                android:id="@+id/button5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/cyan"
                android:clickable="true"
                android:layout_weight = "1"
                android:src="@drawable/redo_selector" />

        </LinearLayout>

</LinearLayout>
